{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",

    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "./node_modules/@types",
    "./src/libs/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./__tests__/**/*.ts"
  ],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
